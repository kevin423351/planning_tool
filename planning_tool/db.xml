<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 https://concretecms.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

  <table name="expertise">
    <field name="ID" type="integer" size="10">
      <unsigned/>
      <autoincrement/>
      <key/>
    </field>
    <field name="name" type="string" size="255">
      <notnull/>
    </field>
  </table>

  <table name="persons">
    <field name="personsID" type="integer" size="10">
      <unsigned/>
      <autoincrement/>
      <key/>
    </field>
    <field name="firstname" type="string" size="255">
      <notnull/>
    </field>
    <field name="lastname" type="string" size="255">
      <notnull/>
    </field>
     <field name="email" type="string" size="255">
      <notnull/>
    </field>
    <field name="date" type="text">    
      <notnull/>
    </field> 
    <!-- <field name="expertise_id" type="integer" size="10">
        <constraint>
         , foreign key (expertise_id) references expertise(ID)
        </constraint>
    </field> -->
  </table>

  <table name="appointments">
    <field name="id" type="integer" size="10">
      <unsigned/>
      <autoincrement/>
      <key/>
    </field>
    <field name="expertise_id" type="integer">    
    </field>
    <field name="person_id" type="integer">    
    </field>
    <field name="date" type="text">    
      <notnull/>
    </field>
    <field name="name" type="string" size="255">
      <notnull/>
    </field>
    <field name="email" type="string" size="255">   
      <notnull/> 
    </field>
    <field name="phone" type="string" size="20">   
      <notnull/> 
    </field>
    <field name="comment" type="text">    
    </field>
    <field name="confirmed" type="boolean">    
    </field>
    <field name="reminder_sent" type="boolean">    
    </field>
  </table>

</schema>